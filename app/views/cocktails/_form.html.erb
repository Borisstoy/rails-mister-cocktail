<div class="main-wrapper">
  <div class="wrapper-skinny">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create a cocktail", class:'button-main' %>
    <% end %>

  </div>
    <%= link_to "Go back to cocktails page", cocktails_path, class:'button-back' %>
</div>

