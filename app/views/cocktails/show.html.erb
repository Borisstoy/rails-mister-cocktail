<h1><%= @cocktail.name %></h1>

<p>To make this cocktail, you need:</p>

  <h1 class="text-align">Add doses to: <%= @cocktail.name %></h1>
  <%= simple_form_for([@cocktail, @dose]) do |f|%>
    <%= f.input :ingredient_id, collection: Ingredient.all %>
    <%= f.input :description %>
    <%= f.submit %>
  <% end %>

  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete this dose", dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>


<%= link_to "Go back to cocktails page", cocktails_path, class:'button-main' %>
